{
    "name": "Move Tab Hotkeys",
    "description": "Hotkeys to move tabs around",
    "homepage_url": "https://github.com/jmmerz/move-tab-hotkeys",
    "manifest_version": 2,
    "version": "1.0",
    "applications": {
        "gecko": {
            "id": "move_tabs_hotkeys@jmmerz.github"
        }
    },
    "author": "Jonathon Merz",
    "icons": {
        "48": "icons/icon48.png",
        "64": "icons/icon64.png"
    },

    "background": {
        "scripts": [
            "browserCompatibility.js",
            "moveTabs.js"
        ]
    },
    "commands": {
        "move-tab-left": {
            "suggested_key": { "default": "Alt+Shift+Left" },
            "description": "Moves the current tab left one tab"
        },
        "move-tab-right": {
            "suggested_key": { "default": "Alt+Shift+Right" },
            "description": "Moves the current tab right one tab"
        },
        "move-tab-first": {
            "suggested_key": { "default": "Alt+Shift+0" },
            "description": "Moves the current tab to the start"
        },
        "move-tab-last": {
            "suggested_key": { "default": "Alt+Shift+9" },
            "description": "Moves the current tab to the end"
        }
    }
}
